<p id="notice"><%= notice %></p>

<h1>Listing Memories</h1>

<table  class = "table table-bordered">
  <thead>
    <tr>
      <th>Ram type</th>
      <th>Name</th>
      <th>Link</th>
      <th>Dollar price</th>
      <th>Euro price</th>
      <th>Sticks</th>
      <th>Capacity</th>
      <th>Score</th>
      <th>picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memories.each do |memory| %>
      <tr>
        <td><%= memory.ram_type %></td>
        <td><%= memory.name %></td>
        <td><%= memory.link %></td>
        <td><%= memory.dollar_price %></td>
        <td><%= memory.euro_price %></td>
        <td><%= memory.sticks %></td>
        <td><%= memory.capacity %></td>
        <td><%= memory.score %></td>
        <td><%= memory.picture %></td>
        <td><%= link_to 'Show', memory %></td>
        <td><%= link_to 'Edit', edit_memory_path(memory) %></td>
        <td><%= link_to 'Destroy', memory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Memory', new_memory_path %>
